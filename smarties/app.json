{
  "expo": {
    "name": "smarties",
    "slug": "smarties",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow SMARTIES to access camera for barcode scanning."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SMARTIES to access camera for barcode scanning."
        }
      ],
      "expo-secure-store",
      "expo-font"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smarties.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan barcodes for dietary compliance checking.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to provide location-based dietary recommendations.",
        "NSUserTrackingUsageDescription": "This app uses tracking to provide personalized dietary recommendations."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.smarties.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
