{
  "name": "smarties",
  "version": "1.0.0",
  "main": "index.ts",
  "description": "SMARTIES - Scan-based Mobile Allergen Risk Tracking & Intelligence Suite",
  "keywords": [
    "react-native",
    "expo",
    "mobile",
    "allergen-detection",
    "barcode-scanner",
    "food-safety",
    "dietary-restrictions",
    "mongodb",
    "ai-powered"
  ],
  "author": "SMARTIES Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/smarties.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/smarties/issues"
  },
  "homepage": "https://github.com/your-org/smarties#readme",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start --clear",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "clean": "expo r -c",
    "postinstall": "expo install --fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:validate": "node scripts/validate-deps.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "expo": "~54.0.13",
    "expo-barcode-scanner": "^13.0.1",
    "expo-camera": "^17.0.8",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/stack": "^6.3.20",
    "react-native-screens": "~4.1.0",
    "react-native-safe-area-context": "4.12.0",
    "expo-secure-store": "~14.0.0",
    "expo-location": "~18.0.3",
    "realm": "^12.3.1",
    "@realm/react": "^0.6.2",
    "mongodb": "^6.3.0",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "axios": "^1.6.2",
    "react-native-vector-icons": "^10.0.3",
    "react-native-paper": "^5.11.6",
    "react-native-async-storage": "^1.19.5",
    "expo-constants": "~16.0.2",
    "expo-device": "~6.0.2",
    "expo-notifications": "~0.30.1",
    "react-native-uuid": "^2.0.1"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "@types/jest": "^29.5.8",
    "@types/uuid": "^9.0.7",
    "typescript": "~5.9.2",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.4.2",
    "@testing-library/jest-native": "^5.4.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "prettier": "^3.1.0",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "metro-config": "^0.80.3",
    "react-test-renderer": "19.1.0"
  },

  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "private": true
}
