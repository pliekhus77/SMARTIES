{
  "name": "smarties",
  "version": "1.0.0",
  "main": "index.ts",
  "description": "SMARTIES - Scan-based Mobile Allergen Risk Tracking & Intelligence Suite",
  "keywords": [
    "react-native",
    "expo",
    "mobile",
    "allergen-detection",
    "barcode-scanner",
    "food-safety",
    "dietary-restrictions",
    "mongodb",
    "ai-powered"
  ],
  "author": "SMARTIES Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/smarties.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/smarties/issues"
  },
  "homepage": "https://github.com/your-org/smarties#readme",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start --clear",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "test:integration": "jest --config=jest.integration.config.js --ci --coverage --watchAll=false",
    "test:integration:cloud": "jest --config=jest.integration.config.js --testPathPattern=integration/cloud --ci --watchAll=false",
    "test:e2e": "jest --testPathPattern=__tests__/e2e --setupFilesAfterEnv=./__tests__/e2e/setup.ts --ci --watchAll=false",
    "test:summary": "node scripts/test-summary.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "clean": "expo r -c",
    "postinstall": "expo install --fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:validate": "node scripts/validate-deps.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deploy:health-check": "node scripts/health-check.js",
    "deploy:rollback": "node scripts/rollback.js",
    "deploy:monitor": "node scripts/deployment-monitor.js",
    "deploy:report": "node scripts/deployment-monitor.js report",
    "deploy:status": "node scripts/deployment-status.js",
    "deploy:watch": "node scripts/deployment-status.js watch",
    "test:ios": "node scripts/ios-validation-suite.js",
    "test:ios-compatibility": "node scripts/test-ios-compatibility.js",
    "test:ios-navigation": "node scripts/test-ios-navigation.js",
    "test:ios-functionality": "node scripts/test-ios-functionality.js",
    "test:android": "node scripts/android-validation-suite.js",
    "test:android-build": "node scripts/test-android-build.js",
    "test:android-compatibility": "node scripts/test-android-compatibility.js",
    "test:android-navigation": "node scripts/test-android-navigation.js",
    "test:android-functionality": "node scripts/test-android-functionality.js",
    "test:performance": "node scripts/run-performance-tests.js",
    "test:performance:database": "jest --testPathPattern=performance/database-performance.test.ts --verbose",
    "test:performance:startup": "jest --testPathPattern=performance/app-startup-performance.test.ts --verbose",
    "test:performance:navigation": "jest --testPathPattern=performance/navigation-performance.test.ts --verbose",
    "test:performance:memory": "jest --testPathPattern=performance/memory-performance.test.ts --verbose",
    "validate:performance": "node scripts/validate-performance-requirements.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@realm/react": "^0.6.2",
    "axios": "^1.6.2",
    "expo": "~54.0.13",
    "expo-barcode-scanner": "^13.0.1",
    "expo-camera": "^17.0.8",
    "expo-constants": "~18.0.9",
    "expo-device": "~8.0.9",
    "expo-font": "~14.0.9",
    "expo-location": "~19.0.7",
    "expo-notifications": "~0.32.12",
    "expo-secure-store": "~15.0.7",
    "expo-status-bar": "~3.0.8",
    "mongodb": "^6.3.0",
    "openai": "^4.20.1",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.11.6",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-uuid": "^2.0.1",
    "react-native-vector-icons": "^10.0.3",
    "react-native-worklets": "0.5.1",
    "realm": "^12.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.2",
    "@types/jest": "^29.5.8",
    "@types/react": "~19.1.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-expo": "^54.0.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "metro-config": "^0.80.3",
    "prettier": "^3.1.0",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "private": true
}
