<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Button Style -->
    <Style x:Key="BaseButton" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource MediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="{StaticResource TouchTargetMinimum}" />
        <Setter Property="MinimumWidthRequest" Value="{StaticResource TouchTargetMinimum}" />
        <Setter Property="Padding" Value="{StaticResource Spacing4},{StaticResource Spacing3}" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Shadow" Value="{StaticResource ShadowSmall}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.96" />
                            <Setter Property="Opacity" Value="0.8" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Primary Button -->
    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <!-- Tertiary Button -->
    <Style x:Key="TertiaryButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Shadow" Value="{x:Null}" />
    </Style>

    <!-- Success Button -->
    <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BorderColor" Value="{StaticResource Success}" />
    </Style>

    <!-- Warning Button -->
    <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource Warning}" />
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
        <Setter Property="BorderColor" Value="{StaticResource Warning}" />
    </Style>

    <!-- Danger Button -->
    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource Danger}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BorderColor" Value="{StaticResource Danger}" />
    </Style>

    <!-- Large Button -->
    <Style x:Key="LargeButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="{StaticResource TouchTargetLarge}" />
        <Setter Property="Padding" Value="{StaticResource Spacing6},{StaticResource Spacing4}" />
    </Style>

    <!-- Small Button -->
    <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="MinimumHeightRequest" Value="32" />
        <Setter Property="Padding" Value="{StaticResource Spacing3},{StaticResource Spacing2}" />
    </Style>

    <!-- Icon Button -->
    <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="Shadow" Value="{x:Null}" />
        <Setter Property="WidthRequest" Value="{StaticResource TouchTargetComfortable}" />
        <Setter Property="HeightRequest" Value="{StaticResource TouchTargetComfortable}" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusRound}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Floating Action Button -->
    <Style x:Key="FloatingActionButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="WidthRequest" Value="{StaticResource TouchTargetLarge}" />
        <Setter Property="HeightRequest" Value="{StaticResource TouchTargetLarge}" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusRound}" />
        <Setter Property="Shadow" Value="{StaticResource ShadowLarge}" />
        <Setter Property="Padding" Value="0" />
    </Style>

</ResourceDictionary>
