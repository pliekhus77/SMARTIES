<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Spacing System (8pt grid) -->
    <x:Double x:Key="Spacing0">0</x:Double>
    <x:Double x:Key="Spacing1">4</x:Double>
    <x:Double x:Key="Spacing2">8</x:Double>
    <x:Double x:Key="Spacing3">12</x:Double>
    <x:Double x:Key="Spacing4">16</x:Double>
    <x:Double x:Key="Spacing5">20</x:Double>
    <x:Double x:Key="Spacing6">24</x:Double>
    <x:Double x:Key="Spacing7">28</x:Double>
    <x:Double x:Key="Spacing8">32</x:Double>
    <x:Double x:Key="Spacing10">40</x:Double>
    <x:Double x:Key="Spacing12">48</x:Double>
    <x:Double x:Key="Spacing16">64</x:Double>
    <x:Double x:Key="Spacing20">80</x:Double>

    <!-- Border Radius -->
    <x:Double x:Key="RadiusSmall">4</x:Double>
    <x:Double x:Key="RadiusMedium">8</x:Double>
    <x:Double x:Key="RadiusLarge">12</x:Double>
    <x:Double x:Key="RadiusXLarge">16</x:Double>
    <x:Double x:Key="RadiusRound">999</x:Double>

    <!-- Elevation/Shadow -->
    <Shadow x:Key="ShadowSmall" Brush="{StaticResource Black}" Opacity="0.1" Offset="0,1" Radius="2" />
    <Shadow x:Key="ShadowMedium" Brush="{StaticResource Black}" Opacity="0.15" Offset="0,2" Radius="4" />
    <Shadow x:Key="ShadowLarge" Brush="{StaticResource Black}" Opacity="0.2" Offset="0,4" Radius="8" />
    <Shadow x:Key="ShadowXLarge" Brush="{StaticResource Black}" Opacity="0.25" Offset="0,8" Radius="16" />

    <!-- Touch Targets -->
    <x:Double x:Key="TouchTargetMinimum">44</x:Double>
    <x:Double x:Key="TouchTargetComfortable">48</x:Double>
    <x:Double x:Key="TouchTargetLarge">56</x:Double>

    <!-- Container Styles -->
    <Style x:Key="PageContainer" TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource DarkBackground}}" />
        <Setter Property="Padding" Value="{StaticResource Spacing4}" />
    </Style>

    <Style x:Key="CardContainer" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource DarkSurface}}" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Shadow" Value="{StaticResource ShadowMedium}" />
        <Setter Property="Padding" Value="{StaticResource Spacing4}" />
        <Setter Property="Margin" Value="{StaticResource Spacing2}" />
    </Style>

    <Style x:Key="SectionContainer" TargetType="StackLayout">
        <Setter Property="Spacing" Value="{StaticResource Spacing3}" />
        <Setter Property="Margin" Value="0,{StaticResource Spacing4},0,0" />
    </Style>

    <!-- Layout Templates -->
    <ControlTemplate x:Key="PageTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Frame Grid.Row="0" Style="{StaticResource CardContainer}" Margin="0">
                <ContentPresenter x:Name="HeaderContent" />
            </Frame>
            
            <!-- Content -->
            <ScrollView Grid.Row="1">
                <ContentPresenter x:Name="MainContent" />
            </ScrollView>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>
