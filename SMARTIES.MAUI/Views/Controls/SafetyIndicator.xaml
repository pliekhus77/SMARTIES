<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SMARTIES.MAUI.Views.Controls.SafetyIndicator">
    
    <Frame x:Name="IndicatorFrame" Style="{StaticResource BaseCard}">
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="{StaticResource Spacing3}">
            
            <!-- Status Icon -->
            <Frame x:Name="IconFrame"
                   Grid.Column="0"
                   WidthRequest="40"
                   HeightRequest="40"
                   CornerRadius="20"
                   Padding="0"
                   HasShadow="False"
                   VerticalOptions="Center">
                
                <Label x:Name="StatusIcon"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>
            
            <!-- Status Content -->
            <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="{StaticResource Spacing1}">
                <Label x:Name="StatusTitle"
                       Style="{StaticResource TitleMedium}"
                       LineBreakMode="TailTruncation" />
                
                <Label x:Name="StatusDescription"
                       Style="{StaticResource BodySmall}"
                       LineBreakMode="WordWrap"
                       MaxLines="2" />
            </StackLayout>
            
            <!-- Confidence Score -->
            <StackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="End">
                <Label x:Name="ConfidenceLabel"
                       Style="{StaticResource LabelSmall}"
                       Text="Confidence"
                       HorizontalTextAlignment="Center" />
                
                <Label x:Name="ConfidenceScoreLabel"
                       Style="{StaticResource LabelMedium}"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>
