<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SMARTIES.MAUI.Views.ProfilePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Profile">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="User Profile" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
            
            <Label Text="Manage your dietary restrictions and preferences here." 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource Gray600}" />
            
            <!-- Coming Soon Message -->
            <Frame BackgroundColor="{DynamicResource Gray100}" 
                   Padding="20" 
                   CornerRadius="10">
                <StackLayout Spacing="10">
                    <Label Text="ðŸš§ Coming Soon" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    
                    <Label Text="Profile management features will be available in the next update." 
                           FontSize="14" 
                           HorizontalOptions="Center"
                           TextColor="{DynamicResource Gray600}" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>