<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SMARTIES.MAUI.Views.ProfileSelectionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SMARTIES.MAUI.ViewModels"
             xmlns:models="clr-namespace:SMARTIES.MAUI.Models"
             x:DataType="viewmodels:ProfileSelectionViewModel"
             Title="Select Profile"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20">
            
            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,30">
                <Image Source="smarties_logo.png" 
                       HeightRequest="80" 
                       WidthRequest="80"
                       HorizontalOptions="Center"
                       SemanticProperties.Description="SMARTIES app logo" />
                
                <Label Text="SMARTIES" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource PrimaryTextColor}"
                       SemanticProperties.HeadingLevel="Level1" />
                
                <Label Text="{Binding IsFirstTimeUser, Converter={StaticResource BoolToWelcomeTextConverter}}"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource SecondaryTextColor}"
                       HorizontalTextAlignment="Center" />
            </StackLayout>

            <!-- Content Section -->
            <StackLayout Grid.Row="1" Spacing="20">
                
                <!-- First Time User Welcome -->
                <StackLayout IsVisible="{Binding IsFirstTimeUser}" Spacing="15">
                    <Label Text="Welcome to SMARTIES! 🛡️📱"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           SemanticProperties.HeadingLevel="Level2" />
                    
                    <Label Text="Scan barcodes instantly to check dietary compliance for allergies, religious restrictions, medical conditions, and lifestyle preferences."
                           FontSize="16"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{DynamicResource SecondaryTextColor}"
                           Margin="0,0,0,20" />
                    
                    <Frame BackgroundColor="{DynamicResource InfoBackgroundColor}"
                           BorderColor="{DynamicResource InfoBorderColor}"
                           CornerRadius="8"
                           Padding="15">
                        <StackLayout Spacing="8">
                            <Label Text="🔒 Privacy Notice"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource InfoTextColor}" />
                            <Label Text="Your dietary information is stored securely on your device only. No data is transmitted to external servers."
                                   FontSize="14"
                                   TextColor="{DynamicResource InfoTextColor}" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Profile List -->
                <StackLayout IsVisible="{Binding IsFirstTimeUser, Converter={StaticResource InverseBoolConverter}}" 
                             Spacing="15">
                    <Label Text="Select a Profile"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           SemanticProperties.HeadingLevel="Level2" />
                    
                    <CollectionView ItemsSource="{Binding Profiles}"
                                    SelectionMode="None"
                                    AutomationId="ProfileList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ProfileDisplayItem">
                                <Grid Padding="0,5">
                                    <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                                           BorderColor="{DynamicResource CardBorderColor}"
                                           CornerRadius="12"
                                           Padding="15"
                                           HasShadow="True">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileSelectionViewModel}}, Path=SelectProfileCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Frame.GestureRecognizers>
                                        
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                            <!-- Avatar -->
                                            <Label Grid.Column="0"
                                                   Text="{Binding AvatarEmoji}"
                                                   FontSize="32"
                                                   VerticalOptions="Center"
                                                   SemanticProperties.Description="Profile avatar" />
                                            
                                            <!-- Profile Info -->
                                            <StackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                                <Label Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       SemanticProperties.HeadingLevel="Level3" />
                                                
                                                <Label Text="{Binding RestrictionsSummary}"
                                                       FontSize="14"
                                                       TextColor="{DynamicResource SecondaryTextColor}" />
                                                
                                                <StackLayout Orientation="Horizontal" Spacing="10">
                                                    <Label Text="{Binding LastUsedDisplay}"
                                                           FontSize="12"
                                                           TextColor="{DynamicResource TertiaryTextColor}" />
                                                    <Label Text="•"
                                                           FontSize="12"
                                                           TextColor="{DynamicResource TertiaryTextColor}" />
                                                    <Label Text="{Binding UsageDisplay}"
                                                           FontSize="12"
                                                           TextColor="{DynamicResource TertiaryTextColor}" />
                                                </StackLayout>
                                            </StackLayout>
                                            
                                            <!-- Actions -->
                                            <StackLayout Grid.Column="2" Orientation="Horizontal" Spacing="5">
                                                <Button Text="✏️"
                                                        FontSize="16"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource SecondaryTextColor}"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileSelectionViewModel}}, Path=EditProfileCommand}"
                                                        CommandParameter="{Binding .}"
                                                        SemanticProperties.Hint="Edit profile"
                                                        AutomationId="EditProfileButton" />
                                                
                                                <Button Text="🗑️"
                                                        FontSize="16"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource DangerTextColor}"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileSelectionViewModel}}, Path=DeleteProfileCommand}"
                                                        CommandParameter="{Binding .}"
                                                        SemanticProperties.Hint="Delete profile"
                                                        AutomationId="DeleteProfileButton" />
                                            </StackLayout>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- Error Message -->
                <Frame IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                       BackgroundColor="{DynamicResource ErrorBackgroundColor}"
                       BorderColor="{DynamicResource ErrorBorderColor}"
                       CornerRadius="8"
                       Padding="15">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="⚠️" FontSize="16" VerticalOptions="Center" />
                        <Label Text="{Binding ErrorMessage}"
                               FontSize="14"
                               TextColor="{DynamicResource ErrorTextColor}"
                               VerticalOptions="Center"
                               FlexLayout.Grow="1" />
                        <Button Text="✕"
                                FontSize="14"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource ErrorTextColor}"
                                Command="{Binding ClearErrorCommand}"
                                SemanticProperties.Hint="Dismiss error message" />
                    </StackLayout>
                </Frame>

                <!-- Loading Indicator -->
                <ActivityIndicator IsVisible="{Binding IsLoading}"
                                   IsRunning="{Binding IsLoading}"
                                   Color="{DynamicResource PrimaryColor}"
                                   HeightRequest="40"
                                   SemanticProperties.Description="Loading profiles" />
            </StackLayout>

            <!-- Action Buttons -->
            <StackLayout Grid.Row="2" Spacing="15" Margin="0,30,0,20">
                
                <!-- First Time User Actions -->
                <StackLayout IsVisible="{Binding IsFirstTimeUser}" Spacing="10">
                    <Button Text="Create Profile"
                            FontSize="18"
                            FontAttributes="Bold"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="{DynamicResource PrimaryButtonTextColor}"
                            CornerRadius="25"
                            HeightRequest="50"
                            Command="{Binding CreateNewProfileCommand}"
                            SemanticProperties.Hint="Create a new profile with your dietary restrictions"
                            AutomationId="CreateProfileButton" />
                    
                    <Button Text="Continue as Guest"
                            FontSize="16"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource SecondaryColor}"
                            BorderColor="{DynamicResource SecondaryColor}"
                            BorderWidth="2"
                            CornerRadius="25"
                            HeightRequest="45"
                            Command="{Binding UseGuestModeCommand}"
                            SemanticProperties.Hint="Use the app without saving dietary restrictions"
                            AutomationId="GuestModeButton" />
                </StackLayout>

                <!-- Existing Users Actions -->
                <StackLayout IsVisible="{Binding IsFirstTimeUser, Converter={StaticResource InverseBoolConverter}}" 
                             Spacing="10">
                    <Button Text="+ Add New Profile"
                            FontSize="16"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource PrimaryColor}"
                            BorderColor="{DynamicResource PrimaryColor}"
                            BorderWidth="2"
                            CornerRadius="25"
                            HeightRequest="45"
                            Command="{Binding CreateNewProfileCommand}"
                            SemanticProperties.Hint="Create an additional profile"
                            AutomationId="AddProfileButton" />
                    
                    <Button Text="Continue as Guest"
                            FontSize="14"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource TertiaryTextColor}"
                            Command="{Binding UseGuestModeCommand}"
                            SemanticProperties.Hint="Use the app without selecting a profile"
                            AutomationId="GuestModeSecondaryButton" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
