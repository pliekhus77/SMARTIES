<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="SMARTIES.MAUI.Views.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:SMARTIES.MAUI.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="SMARTIES">

    <TabBar>
        <ShellContent Title="Scanner"
                      Icon="camera.png"
                      Route="scanner"
                      ContentTemplate="{DataTemplate local:ScannerPage}" />

        <ShellContent Title="Profile"
                      Icon="person.png"
                      Route="profile"
                      ContentTemplate="{DataTemplate local:ProfilePage}" />

        <ShellContent Title="History"
                      Icon="history.png"
                      Route="history"
                      ContentTemplate="{DataTemplate local:HistoryPage}" />
    </TabBar>

</Shell>