<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="SMARTIES.MAUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Settings"
    Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1E88E5" Offset="0.0" />
                <GradientStop Color="#0D47A1" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
            <Label 
                Text="⚙️"
                FontSize="60"
                HorizontalOptions="Center"
                TextColor="White" />
            <Label 
                Text="Settings"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White" />
            <Label 
                Text="Configure app preferences and notifications"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="White"
                Opacity="0.8" />
        </StackLayout>
    </Grid>
</ContentPage>