{
  "name": "smarties",
  "version": "1.0.0",
  "description": "Scan-based Mobile Allergen Risk Tracking & Intelligence Suite",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration --testPathIgnorePatterns=platform",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:platform": "jest --testPathPattern=platform --runInBand",
    "test:platform:ios": "TEST_PLATFORM=ios jest --testPathPattern=ios.platform.test.ts",
    "test:platform:android": "TEST_PLATFORM=android jest --testPathPattern=android.platform.test.ts",
    "test:platform:cross": "jest --testPathPattern=crossPlatform.test.ts --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:platform",
    "validate-setup": "node scripts/validate-setup.js",
    "setup:collections": "node src/scripts/setup-collections.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "react-native bundle",
    "ci:validate": "node scripts/validate-ci.js"
  },
  "dependencies": {
    "mongodb": "^6.20.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.ts"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.tsx",
      "**/integration/**/*.test.ts",
      "**/platform/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/test/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "react-native",
    "mobile",
    "allergen",
    "barcode",
    "dietary"
  ],
  "author": "SMARTIES Team",
  "license": "MIT"
}
